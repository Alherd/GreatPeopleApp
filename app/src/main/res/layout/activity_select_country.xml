<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/choose_country"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Выберите страну" />

        <Button
            android:id="@+id/russia_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/choose_country"
            android:padding="10dp"
            android:text="Россия"
            android:textSize="30dp" />

        <Button
            android:id="@+id/italy_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/russia_button"
            android:padding="10dp"
            android:text="Италия"
            android:textSize="30dp" />

        <Button
            android:id="@+id/usa_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/italy_button"
            android:padding="10dp"
            android:text="США"
            android:textSize="30dp" />

        <Button
            android:id="@+id/england_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/usa_button"
            android:padding="10dp"
            android:text="Англия"
            android:textSize="30dp" />

        <Button
            android:id="@+id/france_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/england_button"
            android:padding="10dp"
            android:text="Франция"
            android:textSize="30dp" />

        <Button
            android:id="@+id/germany_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/france_button"
            android:padding="10dp"
            android:text="Германия"
            android:textSize="30dp" />
    </RelativeLayout>
</ScrollView>

