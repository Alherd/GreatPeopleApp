<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.alherd.greatpeopleapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/chegevara"
        android:label="@string/app_name"
        android:roundIcon="@drawable/chegevara"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.SelectProfessionActivity"/>
        <activity android:name=".activities.PeopleListActivity"/>
        <activity android:name=".activities.GreatManDescriptionActivity"/>
    </application>

</manifest>